<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/stylesheets/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/stylesheets/bootstrap-social/bootstrap-social.css">
  <link rel="stylesheet" href="/stylesheets/application.css">
  <link rel="stylesheet" href="/stylesheets/home.css">
  <link rel="stylesheet" href="/stylesheets/review.css">
  <link rel="stylesheet" href="/stylesheets/artist.css">
  <link rel="stylesheet" href="/stylesheets/not_found.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="/javascript/application.js"></script>

  <title></title>
</head>
<body>
  <nav>
    <form id="artist_search" method="get" action="/artist/search">
      <input type="text" class="" name="artist_search_term" placeholder="Search">
      <button id="search_button" type="submit"><span class="glyphicon glyphicon-search"></span></button>
    </form>
    <a href="/"><h3 id="nav-title">LastISaw</h3></a>
    <% if current_user %>
      <form method="post" action="/logout">
        <button id="insta_logout" class="btn btn-social btn-instagram">Logout</button>
      </form>
      <p>Logged in as <%= User.find(current_user.id).insta_username %></p>
    <% else %>
      <a href="/oauth/connect" id="login_nav" class="btn btn-social btn-instagram" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);"><i class="fa fa-instagram"></i>Sign in with Instagram</a>
    <% end %>
  </nav>

  <%= yield %>
</body>
</html>
