<section id="review_form">
  <form method="post" action="/review/new">
    <div class="form_fields">
      <label>Artist (e.g. New Order)</label><br>
      <input type="text" name="artist" required>
    </div>
    <div class="form_fields">
      <label>City/Event (e.g. Vancouver, Squamish Valley Music Festival)</label><br>
      <input type="text" name="city_name" required>
    </div>
    <div class="form_fields">
      <label>Date</label><br>
      <input type="date" name="date" required>
    </div>
    <div class="form_fields">
      <label>Review</label><br>
      <input type="text" name="review" required>
    </div>
      <input class="btn btn-primary" type="submit" name="submit" value="Post it!" >
    </form>
  </section>
