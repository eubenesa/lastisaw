
<div id="middle-banner">
  <h2>
    (Valuable) concert reviews by concertgoers (well, maybe a few by full-time music bloggers).
  </h2>
  <p>
    <a href="/oauth/connect"><img src="http://i.imgur.com/Y8Sl7Ks.png"></a>
    <a href="/event/review/new" class="btn btn-primary btn-sm" role="button">Write a review >></a>
  </p>
</div>

<section id="description-box">
  <header>
    <h2>lorem hipsum enhanced impactful superstructure</h2>
  </header>

    <% @reviews.each do | review | %>
      <div class="home-reviews">  
        <h2><%= review.event.artist.name %></h2>
      </div> 
    <% end %>
    
    <% @reviews.each do | review | %> 
      <div class="home-reviews">
        <h3> <%= review.event.city_name %> </h3>
      </div>
    <% end %>
    
    <% @reviews.each do | review | %>
      <div class="home-reviews">
        <h4> <%= review.event.date.strftime("%a %-d %b %Y") %> </h4>
      </div>
    <% end %>

    <% @reviews.each do | review | %>
      <div class="home-reviews">
        <p>
          <%= review.review %>
        </p>
      </div>
    <% end %>

  <div class="event-pics">
    <img src="<%= @tag1[0].images.standard_resolution.url %>">
  </div>
  <div class="event-pics">
    <img src="<%= @tag2[0].images.standard_resolution.url %>">
  </div>
  <div class="event-pics">
    <img src="<%= @tag3[0].images.standard_resolution.url %>">
  </div>
</section>


